{
    "name": "hexlet/code",
    "bin": [
        "bin/gendiff"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "NONstop",
            "email": "non_2002@mail.ru"
        }
    ],
    "description": "hexlet php-project-lvl2",
    "autoload": {
        "files": [
            "src/DataGetter.php",
            "src/Parser.php",
            "src/Differ.php",
            "src/Formatter.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php"
        ]
    },
    "scripts": {
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit tests --color=always --coverage-clover build/logs/clover.xml"
        ],
        "test:coverage-text": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit tests --color=always --coverage-text"
        ],
        "test:coverage-html": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit tests --color=always --coverage-html build/coverage"
        ]
    },
    "require": {
        "php": ">=8.2",
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^5.4",
        "phpstan/phpstan": "^1.10"
    }
}
